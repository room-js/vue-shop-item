{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib",
    "sourceMap": false,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "allowJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "files": [
    "vue.shims.d.ts"
  ]
}